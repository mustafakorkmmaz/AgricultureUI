@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Stuff Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ilk Adres</th>
                            <th>Ikıncı Adres</th>
                           
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>@item.Id</td>
                                <td>@item.FDesc</td>
                                <td>@item.SDesc</td>
                                <td>
                                
                                <a asp-controller="Address" asp-action="UpdateAddress" asp-route-id="@item.Id" class="btn btn-outline-dark">Güncelle</a>
                                </td>

                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



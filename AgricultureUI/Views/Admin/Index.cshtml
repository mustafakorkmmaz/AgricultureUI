@{
    Layout = "_AdminLayout";
}


@model List<Admin>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı ADI</th>
                            <th>Admin Silme İşlemi</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Username</td>
                                <td><a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteAdmin" asp-route-id="@item.Id">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Admin" asp-action="AddAdmin" class="btn btn-outline-dark float-end mt-2">Admin Ekle</a>
            </div>
        </div>
    </div>
</div>
                                
                                    
                                

                       
                               









@model List<Stuff>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Stuff Tablosu</h4>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Title
                            </th>
                            <th>Silme İşlemi</th>
                            <th>Güncelleme İşlemi</th>

                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/@item.Image" alt="image" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a href="/Stuff/DeleteStuff/@item.Id" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-controller="Stuff" asp-action="UpdateStuff" asp-route-id="@item.Id" class="btn btn-outline-dark">Güncelle</a>
                                </td>
                             
                            </tr>
                        }
                        <a href="/Stuff/AddStuff" class="btn btn-primary float-end">Yeni Stuff Ekle</a>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


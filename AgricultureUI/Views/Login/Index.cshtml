@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Snow Login form Responsive Widget Template : W3Layouts</title>

   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    
    <link rel="stylesheet" href="~/panel/css/style.css" type="text/css" media="all" />
</head>

<body>
   
    <section class="w3l-login">
        <div class="overlay">
            <div class="wrapper">
                <div class="logo">
                    <a class="brand-logo" href="~/panel/index.html">In BBara</a>
                </div>
                <div class="form-section">
                    <h3>Giriş Yap</h3>
                    
                    <form action="/Login/Index" method="post" class="signin-form">
                        <div class="form-input">
                            <input type="text" placeholder="Kullanıcı Adı.." required="" asp-for="Username" autofocus>
                        </div>
                        <div class="form-input">
                            <input type="password" placeholder="Şifre.." asp-for="Password" required="">
                        </div>
                        <label class="check-remaind">
                            <input type="checkbox">
                            <span class="checkmark"></span>
                            <p class="remember">Beni Hatırla</p>
                        </label>
                        <button type="submit" class="btn btn-primary theme-button mt-4">Giriş Yap</button>
                        
                    </form>
                   
                </div>
            </div>
        </div>
        <div id='stars'></div>
        <div id='stars2'></div>
        <div id='stars3'></div>


        <div class="copy-right">
            <p>@DateTime.Now.Year Snow Login Form. Hakları Saklıdır | Design by <a href="http://w3layouts.com/" target="_blank">W3Layouts</a></p>
        </div>
       
    </section>

    <
</body>

</html>
